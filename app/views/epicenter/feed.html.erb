<% if current_user %>
	<h1>@<%= current_user.username %>'s Twitter Feed</h1>
	<p>Here is what your "friends" are saying:</p>


	<div>
		<% if @following_tweets %>
	    <%  @following_tweets.each do |tweet| %>
	      <div>
			    <p>@<%= tweet.user.username %></p>
			    <p><%= tweet.message.html_safe %></p>
		    </div>
	    <% end %>
	  <% else %>
	    <div>
	    	<p>You are not following anyone.</p>
	    </div>
	  <% end %>

	</div>
<% end %>
